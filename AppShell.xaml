<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Admin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Admin"
    xmlns:view="clr-namespace:Admin.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Admin">

    <TabBar>
        <ShellContent 
            Icon="Resourcec//studio_icon.png"
            Title="Студии"
            ContentTemplate="{DataTemplate view:StudioPage }"/>
        <ShellContent 
            Icon="Resourcec//films_icon.png"
            Title="Фильмы"
            ContentTemplate="{DataTemplate view:FilmsPage }"/>
        <ShellContent 
            Icon="Resourcec//actor_icon.png"
            Title="Актеры"
            ContentTemplate="{DataTemplate view:ActorPage}"/>
        <ShellContent 
            Icon="Resourcec//user_icon.png"
            Title="Отзывы"
            ContentTemplate="{DataTemplate view:RatingPage }"/>
    </TabBar>

</Shell>
